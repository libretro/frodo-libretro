INCFLAGS += \
			-I$(CORE_DIR)/libretro/core \
			-I$(CORE_DIR)/libretro/include \
			-I$(CORE_DIR)/libretro/emu \
			-I$(CORE_DIR)/libretro \
			-I$(CORE_DIR)/Src \
			-I$(CORE_DIR)/Src/zlib \
			-I$(CORE_DIR)/Src/libretro-common/include \
